<div class="container">

  <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-3 d-none d-lg-block "></div>
              <div class="col-lg-6">
                  <div class="p-1">

                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Edit <%= resource_name.to_s.humanize %></h1>
                    </div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group row">
          <div class="col-sm-6 mb-3 mb-sm-0">

              <%= f.label :FirstName %><br />
              <%= f.text_field :FirstName, class:"form-control form-control-user", placeholder:"First Name", autofocus: true %>
          </div>

            <div class="col-sm-6">
                <%= f.label :LastName %><br />
                <%= f.text_field :LastName, class:"form-control form-control-user", placeholder:"Last Name", autofocus: true %>
            </div>

</div>

<div class="form-group">

    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true,  class:"form-control form-control-user", placeholder:"Email Address", autocomplete: "email" %>
  </div>



  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group row">
          <div class="col-sm-6 mb-3 mb-sm-0">

    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "new-password" , class:"form-control form-control-user" %>



        </div>

    <div class="col-sm-6">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control form-control-user"%>

  </div>
  <% if @minimum_password_length %>

  <i class="pl-3"><%= @minimum_password_length %> characters minimum (leave blank if you don't want to change it)</i>
<% end %>
</div>


  <div class="field">
    <%= f.label :current_password %> <br />
    <%= f.password_field :current_password, autocomplete: "current-password"%>
    <br><i>(we need your current password to confirm your changes)</i>
  </div>

<br>

     <%= f.submit "Update" ,class: "btn btn-primary btn-user   btn-block  "%>
 <% end %>


<hr>
    <div class="text-center">
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account",  registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger btn-user btn-block" %></p>

<%= link_to "Back", :back %>

</div>

<div>
</div>
</div>
</div>
  <div class="col-lg-3 d-none d-lg-block "></div>
</div>

</div>
